{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "strict": false,
        "target": "ESNext",
        "allowJs": false,
        "sourceMap": true,
        "outDir": "dist",
        "declaration": true,
        "rootDir": "src",
        "skipLibCheck": true,
        "types": ["node"]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "scripts/",
        "**/*.d.ts",
        "**/*.spec.ts"
    ]
}